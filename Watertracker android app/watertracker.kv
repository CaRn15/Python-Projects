<MyRoot>

    orientation: 'vertical'
    spacing: 10
    padding: 10
    canvas.before:
        Color:
            rgba: 0.9, 0.9, 0.9, 0.3
        Rectangle:
            pos: self.pos
            size: self.size

    Label:
        text: "Water tracker"
        font_size: 24

    TextInput:
        id: entry
        hint_text: "Water amount"
        font_size: 15
        height: 50
        size_hint: (1,None)

    Label:
        id: total
        text: "Total: 0.0"
        font_size: 15

    Button:
        text: "Add"
        on_release: root.add(root)
        background_color: 0, 0.6, 1, 2

    Button:
        text: "Quit"
        on_release: root.quit(root)
        background_color: 0, 0.6, 1, 2